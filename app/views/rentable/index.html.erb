<div class='center'>
    <%= form_with url: property_index_path do |form| %>
        <div>Please enter the URL for the file you would like to parse</div>
        <%= form.text_field :url, size: 60 %>
        <%= form.submit "Parse" %>
    <% end %>
</div>
<% if flash[:notice] %>
    <script>
        toastr.success('<%= flash[:notice] %>');
    </script>

    <div class='center'>
        <%= form_with url: properties_path, method: :get do |form| %>
            <%= form.submit "Show Madison Properties" %>
        <% end %>
    </div>
<% end %>

<% if flash[:alert] %>
    <script>
        toastr.error('<%= flash[:alert] %>');
    </script>
<% end %>